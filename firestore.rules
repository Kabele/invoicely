
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // A user can only access their own document.
    // They cannot create it themselves (server action does this).
    // They can read, update, and delete it.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if false; // Creation is handled by a trusted server environment.
    }
    
    // A user can fully manage their own invoices.
    match /users/{userId}/invoices/{invoiceId} {
      allow read, write, create, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // A user can fully manage their own receipts.
    match /users/{userId}/receipts/{receiptId} {
      allow read, write, create, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
